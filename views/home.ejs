    <!-- it display the content on the hyper termal  -->
    <% console.log(posts) %>

    <!-- this is the forEach loop for displaying the content of array to the home page -->
    <% posts.forEach(function(post){ %>
        <h1><%= post.title %> </h1>
        <p>
            <%= post.content.substring(0,100)+"..." %>
            <a href="/posts/<%= (post._id) %> ">Read More</a> 
        </p>
    <%  })  %>

